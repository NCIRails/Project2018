= form_for @registration, html: { class: "basic-grey" } do |f|
      - if @registration.errors.any?
        #error_explanation
          %h2
            = pluralize(@registration.errors.count, "error")
            prohibited this registration from being saved:
          %ul
            - @registration.errors.full_messages.each do |message|
              %li= message
      .field
        = f.hidden_field :product_id, value: @order.id
      .field
        = f.label :full_name
        = f.text_field :full_name
      .field
        = f.label :email
        = f.text_field :email
      .field
        = f.label :address
        = f.text_field :address
      .actions
        %script.stripe-button{ src: "https://checkout.stripe.com/checkout.js",
              data: {amount: @order.price*100, description: @order.name, key: Rails.application.secrets.stripe_publishable_key}}
